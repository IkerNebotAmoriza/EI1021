<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>FlotaServlets</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Aqui se han introducido manualmente los datos del servlet "HundirFlotaServlet", para mostrar su funcionamiento. Sin embargo
  	   el resto de servlets utilizan anotaciones en las clases, ya que Tomcat 9.0 es compatible con Servlets 3.0, que son los que las utilizan -->
  
  <servlet>
    <description></description>
    <display-name>HundirFlotaServlet</display-name>
    <servlet-name>HundirFlotaServlet</servlet-name>
    <servlet-class>controlador.HundirFlotaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HundirFlotaServlet</servlet-name>
    <url-pattern>/HundirFlotaServlet</url-pattern>
  </servlet-mapping>
</web-app>